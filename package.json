{
  "name": "kitten-ds",
  "version": "0.2.1",
  "type": "module",
  "author": "Gabriely de Lima <gabrielylima.dev@gmail.com>",
  "description": "Kitten DS is an accessible, usability-tested design system focused on intuitive, user-friendly interfaces.",
  "main": "dist/cjs/index.cjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.cjs",
      "import": "./dist/esm/*.mjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf dis dist && rollup -c --bundleConfigAsCjs",
    "build:test": "rm -rf dis tests/build && rollup -c rollup.test.js --bundleConfigAsCjs ",
    "build:vite": "rm -rf dist && tsc && vite build",
    "build-storybook": "storybook build",
    "coverage": "vitest run --coverage --config vitest.build.ts",
    "dev": "vite",
    "lint": "biome check --fix --unsafe ./src/**",
    "lint:ci": "biome check --diagnostic-level=error ./src/**",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "preview": "vite preview",
    "rollup": "rollup -c",
    "storybook": "storybook dev -p 6006",
    "test": "vitest --config vitest.build.ts",
    "test:build": "vitest run tests/** -c ./vitest.build.ts"
  },
  "keywords": [],
  "license": "ISC",
  "files": ["dist"],
  "packageManager": "pnpm@10.5.2",
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@chromatic-com/storybook": "^3",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-a11y": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.1.2",
    "@vitest/coverage-v8": "^3.1.2",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "playwright": "^1.52.0",
    "rollup": "^4.40.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "storybook": "^8.6.12",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.2",
    "vitest-axe": "^0.1.0"
  }
}
